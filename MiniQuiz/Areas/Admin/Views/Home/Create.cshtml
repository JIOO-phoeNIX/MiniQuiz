@model HomeCreateViewModel
@{
    ViewData["Title"] = "Create Question";
}

<h1>Create Question</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.QuestionText" class="control-label"></label>
                <textarea asp-for="@Model.QuestionText" class="form-control"></textarea>                
                <span asp-validation-for="@Model.QuestionText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Option1" class="control-label"></label>
                <input asp-for="@Model.Option1" class="form-control" />
                <span asp-validation-for="@Model.Option1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Option2" class="control-label"></label>
                <input asp-for="@Model.Option2" class="form-control" />
                <span asp-validation-for="@Model.Option2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Option3" class="control-label"></label>
                <input asp-for="@Model.Option3" class="form-control" />
                <span asp-validation-for="@Model.Option3" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Option4" class="control-label"></label>
                <input asp-for="@Model.Option4" class="form-control" />
                <span asp-validation-for="@Model.Option4" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.CorrectOption" class="control-label"></label><br />
                @foreach (var option in Model.Options)
                {
                    <input type="radio" asp-for="@Model.CorrectOption" value="@option.Id" /> @option.OptionText<br />
                }
                <span asp-validation-for="@Model.CorrectOption" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Index</a>
</div>