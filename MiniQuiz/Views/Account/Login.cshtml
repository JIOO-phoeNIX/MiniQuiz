@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
           
            <a asp-action="Register" asp-controller="Account" asp-route-ReturnUrl="@ViewBag.ReturnUrl">Don't have an account?</a>
            <br />
            <input type="submit" id="submit" value="Login" class="btn btn-primary" />
        </form>

        <a asp-action="Index" asp-controller="Home" asp-area="Admin">Back to home</a>
    </div>  
</div>

